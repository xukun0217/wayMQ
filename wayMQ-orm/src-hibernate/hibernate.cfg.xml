<?xml version='1.0'  encoding='UTF-8'  ?>
<!DOCTYPE  hibernate-configuration  PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd" >
<hibernate-configuration>


	<session-factory>


		<property name='connection.username'>waymq</property>
		<property name='connection.password'>12345678</property>
		<property name='connection.url'>jdbc:mysql://localhost:3306/waymq</property>
		<property name='connection.driver_class'>com.mysql.jdbc.Driver</property>
		<property name="connection.pool_size">1</property>


		<property name='dialect'>org.hibernate.dialect.MySQLDialect</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<property name='show_sql'>true</property>


		<mapping resource='Phone.hbm.xml' />
		<mapping resource='User.hbm.xml' />
		<mapping resource='Member.hbm.xml' />
		<mapping resource='Group.hbm.xml' />

	</session-factory>

</hibernate-configuration>